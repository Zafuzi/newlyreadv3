<span>@using NewlyReadv3.Tools;</span><h2>Featured Articles</h2><p>@ViewBag.Message</p><span class="articles">@foreach(var source in ViewBag.Articles){
    <a href="~/Home/ViewArticle?url=@source.url&title=@source.title" class="article">
        <paper-card>
            <div class="card-image">
                <img class="lazyload" src="~/images/news.png" data-src="@source.urlToImage" alt="Missing Article Image">
            </div>
            <div class="card-content">
                <h4>@source.title</h4>
                <p class="light">@source.author</p>
                <small>@source.publishedAt</small>
                <p>@StringTools.Concat("" + source.description, 100)...</p>
                <p>@StringTools.GetDomainName("" + source.url)</p>
            </div>
        </paper-card>
    </a>
}</span>